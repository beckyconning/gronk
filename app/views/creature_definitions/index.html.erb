<% @creature_definitions.each do |creature_definition| %>
  <tr>
    <td><%= creature_definition.name %></td>
    <td><%= creature_definition.sleepy_phase_id %></td>
    <td><%= link_to 'Show', creature_definition %></td>
    <td><%= link_to 'Edit', edit_creature_definition_path(creature_definition) %></td>
    <td><%= link_to 'Destroy', creature_definition, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

