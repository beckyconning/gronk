<%= form_for @item_definition, :html => { :multipart => true } do |f| %>
  <% if @item_definition.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item_definition.errors.count, "error") %> prohibited this item_definition from being saved:</h2>

      <ul>
      <% @item_definition.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <%= f.fields_for :graphic, @item_definition.graphic do |graphic_fields| %>
    <%= field_set_tag 'Graphic' do %>
      <%= render :partial => "graphics/fields", :locals => { :f => graphic_fields } %> 
    <% end %>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
